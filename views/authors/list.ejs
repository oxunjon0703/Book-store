<%- include('../layout/top') %>
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <h1 class="card-title">Mualliflar</h1>
                    <% if (adminId) { %>
                        <a href="/authors/create" class="btn btn-primary">Muallif qo'shish</a>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-cols-1 row-cols-md-4 g-3">
        <% authors.forEach(author=> { %>
            <div class="col">
                <div class="card">
                    <!-- <img src="..." class="card-img-top" alt="..."> -->
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= author.name %>
                        </h5>
                        <a href="/authors/<%= author.id %>" class="card-link mt-auto">Batafsil</a>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>
    <%- include('../layout/bottom') %>