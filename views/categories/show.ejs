<%- include('../layout/top') %>
    <div class="row mb-3">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">
                        <%= category.name %>
                    </h1>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong class="me-2">Kitoblar soni:</strong>
                        <%= categoryBooks.length %>
                    </li>
                </ul>
                <div class="card-body d-flex justify-content-end">
                    <div>
                        <a href="/categories/<%= category.id %>/edit" class="btn btn-warning me-2">Tahrirlash</a>
                        <form class="d-inline" action="/categories/<%= category.id %>?_method=DELETE" method="post">
                            <button class="btn btn-danger" type="submit">O'chirish</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../layout/bottom') %>